<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.padcmyanmar.padcx.helloandroid_padc_x">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".NewsDetailActivity"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar">

        </activity>
        <activity
            android:name=".NewsListActivity"
            android:label="@string/tool_bar_title_news_list"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".BottomSheetActivity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"></activity>
        <activity
            android:name=".CommonUIElementsExamplesActivity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity android:name=".BottomNavigationWithViewPagerActivity" />
        <activity
            android:name=".BottomNavigationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TabWithViewPager2Activity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".DynamicFragmentActivity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".StaticFragmentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ConstraintLayoutActivity" />
        <activity
            android:name=".NavigationViewActivity"
            android:label="Navigation View"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CollapsingToolbarActivity"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />
        <activity
            android:name=".TabLayoutActivity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity android:name=".ImplicitIntentAssignmentActivity">

            <!-- Timer -->
            <intent-filter>
                <action android:name="android.intent.action.SET_TIMER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OtherCommonUiElementsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UIComponentsActivity" />
        <activity android:name=".ContainerComponentActivity" />
        <activity
            android:name=".ViewsActivity"
            android:label="@string/toolbar_title_views"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SecondActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SET_TIMER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>